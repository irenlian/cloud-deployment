{
    "name": "serverless",
    "version": "1.0.0",
    "description": "Training of deployment configuration using Kubernetes, AWS, Helm, Terraform",
    "main": "app.ts",
    "scripts": {
        "start": "ts-node ./src/index.ts",
        "debug": "node --inspect -r ts-node/register ./src/index.ts",
        "clean": "rm -rf dist",
        "test": "jest --testPathPattern=/__tests__/.*\\.ts$",
        "inttest": "jest --testPathPattern=/__integration_tests__/.*\\.ts$ --runInBand",
        "test:coverage": "jest --coverage",
        "lint": "tslint --project tsconfig.json --format stylish",
        "build": "tsc",
        "server": "node dist/index.js",
        "dev": "nodemon"
    },
    "jest": {
        "preset": "ts-jest",
        "transform": {
            "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "collectCoverageFrom": [
            "<rootDir>/src/**/*{ts|tsx}"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>src/setupTests.ts"
        ],
        "clearMocks": true
    },
    "author": "jdcw",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/stockx/koa-service-sample/issues"
    },
    "homepage": "https://github.com/stockx/koa-service-sample#readme",
    "dependencies": {
        "aws-sdk": "^2.814.0",
        "dynamoose": "^1.11.1",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.2.1",
        "koa-router": "^7.4.0",
        "lodash": "^4.17.15",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/koa": "^2.0.52",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-router": "^7.0.42",
        "@types/lodash": "^4.14.149",
        "jest": "^24.9.0",
        "nodemon": "^2.0.0",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.2",
        "typescript": "^3.7.2"
    }
}
